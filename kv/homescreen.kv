#: import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        canvas:
            #背景指定
            Color: 
                rgb:utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size:self.size
                pos:self.pos
        Label:
            #タイトル
            pos_hint:{"top":1,"left":1} 
            size_hint:1,0.1
            id:streak_label
        ScrollView:
            #この中はスクロール可能
            pos_hint:{"top":0.9,"left":1} 
            size_hint:1,0.75
            GridLayout:
                #workoutの一覧を表示
                id:banner_grid
                cols:1
                spacing:10,10
                size_hint_y:None
                height:self.minimum_height
                row_default_height:"100dp"
                row_force_default:True
        GridLayout:
            #フッター
            rows:1
            pos_hint:{"top":0.15,"left":1} 
            size_hint:1,0.15
            ImageButton:
                source:"icons/add.png"
            ImageButton:
                source:"icons/friends_list.png"
                on_release:
                    print("RELEASED_FOOTBALL")
            ImageButton:
                source:"icons/settings.png"
                on_release:
                    app.change_screen("settings_screen")

            
            