#:include kv/homescreen.kv
#:include kv/settingsscreen.kv
#:include kv/changeavatarscreen.kv
#:include kv/loginscreen.kv
#:include kv/addfriendscreen.kv
#:include kv/addworkoutscreen.kv
#:include kv/friendslistscreen.kv
#:include kv/friendworkoutscreen.kv

GridLayout:
    cols:1
    FloatLayout:
        GridLayout:
            canvas:
                #背景指定
                Color: 
                    rgb:utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size:self.size
                    pos:self.pos
            #ヘッダー
            rows:1
            pos_hint:{"top":1,"left":1} #一番左上
            size_hint:1,0.05 #横：ウインドウ幅の1倍，縦：ウインドウ高の0.05倍
            Image:
                source:"icons/002-sunrise.png"
            Image:
                source:"icons/001-sun.png"
        FloatLayout:
            canvas:
                #背景指定
                Color: 
                    rgb:utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size:self.size
                    pos:self.pos
            #プロフィール画像等表示
            rows:1
            pos_hint:{"top":0.95,"left":1} 
            size_hint:1,0.15
            Image:
                source:"icons/003-sunset.png"
                size_hint:0.25,0.5
                pos_hint:{"top":1,"right":0.25}
            Image:
                source:"icons/avatars/man.png"
                id:avatar_image
                size_hint:0.5,1
                pos_hint:{"top":1,"right":0.75}
            Image:
                source:"icons/007-crescent-moon.png"
                size_hint:0.25,0.5
                pos_hint:{"top":1,"right":1}

        ScreenManager:
            size_hint:1,0.799
            pos_hint:{"top":0.799,"left":1}
            id: screen_manager
            LoginScreen:
                # 一番最初に記述しているため、最初に表示される
                name:"login_screen"
                id:login_screen
            HomeScreen:
                name:"home_screen"
                id:home_screen
            SettingsScreen:
                name:"settings_screen"
                id:settings_screen
            ChangeAvatarScreen:
                name:"change_avatar_screen"
                id:change_avatar_screen
            AddFriendScreen:
                name:"add_friend_screen"
                id:add_friend_screen
            AddWorkoutScreen:
                name:"add_workout_screen"
                id:add_workout_screen
            FriendsListScreen:
                name:"friends_list_screen"
                id:friends_list_screen
            FriendWorkoutScreen:
                name:"friend_workout_screen"
                id:friend_workout_screen
